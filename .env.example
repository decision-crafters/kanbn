# Example .env file for Kanbn
# Copy to .env and customize values

# Debugging and Logging
DEBUG=false
KANBN_QUIET=false
LOG_LEVEL=info

# MCP Server Configuration
MCP_PORT=11434
MCP_DEFAULT_MODEL=google/gemma-3-4b-it:free
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MCP_API_KEY=your_mcp_api_key_here
MCP_MAX_CONNECTIONS=100
MCP_REQUEST_TIMEOUT=30000

# AI Service Configuration
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=google/gemma-3-4b-it:free
OPENROUTER_STREAM=true

OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=llama3
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9

# AI Behavior
AI_PRIMARY_SERVICE=openrouter
AI_FALLBACK_ENABLED=true
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000
AI_MAX_TOKENS=4096
AI_TIMEOUT=30000
AI_CONCURRENCY=5

# Conversation Settings
CONVERSATION_HISTORY_ENABLED=true
CONVERSATION_HISTORY_LIMIT=20
CONVERSATION_HISTORY_DIR=.kanbn/conversations

# Board Defaults
DEFAULT_COLUMNS=Backlog,In Progress,Done
DEFAULT_WORKFLOW_STATES=backlog,active,completed
WORKLOAD_FIELD=estimate
WORKLOAD_SCALE=5

# Advanced Features
PROMPT_VERSIONING=true
CONTEXT_FIELDS=relatedTasks,currentSprint
RETROSPECTIVE_DEPTH=detailed
USE_REAL_API=false  # Set true to bypass mocks in tests

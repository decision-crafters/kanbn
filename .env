# Debugging and Logging
DEBUG=true
KANBN_QUIET=false  # Set to true to suppress warnings
LOG_LEVEL=info     # debug, info, warn, error

# MCP Server Configuration
MCP_PORT=11434
MCP_DEFAULT_MODEL=google/gemma-3-4b-it:free
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MCP_MAX_CONNECTIONS=100
MCP_REQUEST_TIMEOUT=30000  # 30 seconds

# AI Service Configuration
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=google/gemma-3-4b-it:free
OPENROUTER_STREAM=true

OLLAMA_HOST=http://127.0.0.1:11434  # Force IPv4
OLLAMA_MODEL=llama3  # Default local model
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9

# AI Service Fallback Behavior
AI_PRIMARY_SERVICE=openrouter  # openrouter|ollama
AI_FALLBACK_ENABLED=true
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000  # ms

# Performance Tuning
AI_MAX_TOKENS=4096
AI_TIMEOUT=30000  # 30 seconds
AI_CONCURRENCY=5  # Max parallel requests

# Conversation History
CONVERSATION_HISTORY_ENABLED=true
CONVERSATION_HISTORY_LIMIT=20  # Messages
CONVERSATION_HISTORY_DIR=.kanbn/conversations
